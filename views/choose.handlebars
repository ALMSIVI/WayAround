{{> nav}}
<div class="text-center">
	<h3> Customize Your Way </h3>
	<form class="form-inline" method="get" action="/choose">
		<div class="form-group">
			<label>From</label>
			<input type="text" class="form-control" name="start" value={{start}}>
		</div>
		<div class="form-group">
			<label>To</label>
			<input type="text" class="form-control" name="dest" value={{dest}}>
		</div>
		<button type="submit" class="btn btn-default btn-lg">Update</button>
	</form>
	<hr>
	<div class="container">
		<button class="btn btn-lg btn-primary btn-block" type="button">&#43; Add</button>
		<a href="/showroute" class="btn btn-lg btn-primary btn-block" role="button">Show WayAround!</a>
	</div>
</div>
{{> footer}}


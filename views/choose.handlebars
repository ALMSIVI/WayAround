{{> nav}}
<div class="text-center">
	<h2 style="padding-bottom : 20px; padding-top : 10px;"> Customize Your Way </h2>
	<form class="form-inline" method="get" action="/choose">
		<div class="form-group">
			<label>From</label>
			<div class="col-md-6 col-md-offset-3">
				<input type="text" class="form-control" name="start" value="{{start}}">
			</div>
		</div>
		<div class="form-group">
			<label>To</label>
			<div class="col-md-6 col-md-offset-3">
				<input type="text" class="form-control" name="dest" value="{{dest}}">
			</div>
		</div>
		<button type="submit" class="btn btn-default btn-lg">Update</button>
	</form>
</div>
<hr>
<div class="container">
	<div class="text-center">
		<h3 style="padding-bottom : 20px;">
			Choose Parameters For Your Route :
		</h3>
	<form class="form" method="post" action="/showroute">
		<div class="form-group">
			<label class="radio-inline">
				<input type="checkbox" id="aestheticRadio" name="routeOptions" value="aesthetic"> Aesthetic
			</label>
			<label class="radio-inline">
				<input type="checkbox" id="congestionRadio" name="routeOptions" value="congestion"> Congestion
			</label>
			<label class="radio-inline">
				<input type="checkbox" id="terrainRadio" name="routeOptions" value="terrain"> Terrain Smoothness
			</label>
			<label class="radio-inline">
				<input type="checkbox" id="safetyRadio" name="routeOptions" value="safety"> Safety
			</label>
		</div>
	</div>
		<div id="appender" style="display : none"> </div> 

		<div class="form-group options" id="aestheticOptions">
			<h4>Aesthetic Options</h4>
			<label>Places of Interests</label>
			<select class="form-control" name="places">
				<option value="art">Public Art</option>
				<option value="foodnshop">Shops and Restaurants</option>
				<option value="scenery">Scenery</option>
			</select>
		</div>

		<div class="form-group options" id="congestionOptions">
			<h4>Congestion Options</h4>
			<label>Quietness and Crowd Level</label>
			<div class="radio">
				<label>
					<input type="radio" name="congestion" value="quiet">Quiet
				</label>
			</div>
			<div class="radio">
				<label>
					<input type="radio" name="congestion" value="lively">Lively
				</label>
			</div>
			<div class="radio">
				<label>
					<input type="radio" name="congestion" value="both">I don't care!
				</label>
			</div>
		</div>

		<div class="form-group options" id="terrainOptions">
			<h4>Terrain Options</h4>
			<label>Do you mind terrains that are hard to traverse?</label>
			<div class="checkbox">
				<label>
					<input type="checkbox" name="terrain" value="hill">No Hills
				</label>
			</div>
			<div class="checkbox">
				<label>
					<input type="checkbox" name="terrain" value="mud">No Muds
				</label>
			</div>
			<div class="checkbox">
				<label>
					<input type="checkbox" name="terrain" value="sidewalk">Has Sidewalk
				</label>
			</div>
		</div>

		<div class="form-group options" id="safetyOptions">
			<h4>Safety Options</h4>
			<label>Do you feel a sense of insecurity?</label>
			<div class="checkbox">
				<label>
					<input type="checkbox" name="security" value="lights">Street Lights
				</label>
			</div>
		</div>

		<div class="choose-footer-container">
			<div class="choose-footer-item">
				<button class="btn btn-lg btn-primary" type="button" id="addbutton">&#43; Add</button>
				<button class="btn btn-lg btn-primary" role="button" id="showbutton">Show WayAround!</button>
			</div>
		</div>
	</form>
</div>
<script src="/js/choose.js"></script>
</body>
</html>



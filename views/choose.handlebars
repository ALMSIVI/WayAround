{{>layout title="Customize your route"}}
{{> nav}}
<div class="text-center">
	<h2 style="padding-bottom : 20px; padding-top : 10px;"> Customize Your Route! </h1>
	<form class="form-inline" method="get" action="/choose">
		<div class="form-group">
				<label for="startbox">From : </label>
				<input type="text" class="form-control" name="start" id= "startbox"value="{{start}}" />
		</div>
		<div class="form-group">
				<label for="tobox">To : </label>
				<input type="text" class="form-control" id="tobox" name="dest" value="{{dest}}" />
		</div>
		<button type="submit" class="btn btn-default btn-lg">Update</button>
	</form>
</div>
<hr>
<div class="container">
	<div class="text-center">
		<h2 style="padding-bottom : 20px;">
			Choose Your Preferences:
		</h2>
		<form class="form" id="params" method="post" action="/showroute">
		</div>

		<h2 class="bg-primary" id="aestheticRadio">Aesthetic Options</h3>
		<div class="form-group options" id="aestheticOptions">
			<label>Places of Interests</label>
			<select class="form-control" name="places">
				<option value="art">Public Art</option>
				<option value="parks">Public Parks</option>
				<option value="food">Restaurants, Food, & Drink</option>
				<option value="shops">Shops</option>
				<option value="scenery">Scenery</option>
			</select>
		</div>

		<h2 class="bg-primary" id="congestionRadio">Congestion Options</h3>
		<div class="form-group options" id="congestionOptions">
			<label>Quietness</label>
			<div class="radio">
				<label>
					<input type="radio" name="quietness" value="quiet">Quiet
				</label>
			</div>
			<div class="radio">
				<label>
					<input type="radio" name="quietness" value="moderate">Moderate Volume
				</label>
			</div>				
			<div class="radio">
				<label>
					<input type="radio" name="quietness" value="loud">Loud
				</label>
			</div>			
			<label>Crowd Congestion</label>
			<div class="radio">
				<label>
					<input type="radio" name="congestion" value="empty">Empty
				</label>
			</div>
			<div class="radio">
				<label>
					<input type="radio" name="congestion" value="moderate">Moderate Congestion
				</label>
			</div>
			<div class="radio">
				<label>
					<input type="radio" name="congestion" value="high">High Congestion
				</label>
			</div>			
			<div class="radio">
				<label>
					<input type="radio" name="congestion" value="packed">Packed
				</label>
			</div>
		</div>

		<h2 class="bg-primary" id="terrainRadio">Terrain Options</h3>
		<div class="form-group options" id="terrainOptions">
			<label>Do you have a preference for terrain?</label>
			<div class="checkbox">
				<label>
					<input type="checkbox" name="terrain" value="sidewalks">Wheelchair Accessible
				</label>
			</div>			
			<div class="checkbox">
				<label>
					<input type="checkbox" name="terrain" value="steepness">No Steep Hills
				</label>
			</div>			
			<div class="checkbox">
				<label>
					<input type="checkbox" name="terrain" value="shade">Shaded Area Only
				</label>
			</div>
		</div>

		<h2 class="bg-primary" id="safetyRadio">Safety Options</h3>
		<div class="form-group options" id="safetyOptions">
			<label>Do you have preferences that would increase your safety?</label>
			<div class="checkbox">
				<label>
					<input type="checkbox" name="security" value="lights">Well Lit
				</label>
			</div>
			<div class="checkbox">
				<label>
					<input type="checkbox" name="terrain" value="sidewalk">Sidewalk Only
				</label>
			</div>			
			<div class="checkbox">
				<label>
					<input type="checkbox" name="terrain" value="service">Reliable Cell Service
				</label>
			</div>
		</div>

		<div class="choose-footer-container">
			<div class="choose-footer-item">
				<button class="btn btn-primary" type="button" id="resetbutton" style="margin-right : 24px;">Reset</button>
				<button class="btn btn-primary" type="submit" id="showbutton">Submit</button>
			</div>
		</div>
	</form>
</div>
<script src="/js/choose.js"></script>
</body>
</html>



{{>layout title="Login"}}
{{> nav login="login"}}
<div class="container">
	<h2 class="text-center"> Login to WayAround</h2>

	<form id="login" method="post" action="/" data-parsley-validate="">
		<div class="form-group">
			<label for="email">Email address</label>
			<input type="email" class="form-control" id="email" placeholder="Email" data-parsley-trigger="change" required="">
		</div>
		<div class="form-group">
			<label for="password">Password</label>
			<input type="password" class="form-control" id="password" placeholder="Password" required="">
		</div>
		<div class="checkbox">
			<label>
				<input type="checkbox"> Remember me
			</label>
		</div>
		<button type="submit" class="btn btn-default">Sign in</button>
	</form>

	<br>
	<p>... or sign in with Facebook</p>
	
	<div id="login-failure" class="alert alert-warning hidden">
		<p> There seems to be invalid fields. Check the form and try again.</p>
	</div>

</div>
<script src="/js/parsley.min.js"></script>
<script src="/js/validate.js"></script>
{{> footer}}
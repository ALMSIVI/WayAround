{{> layout title="Create an Account" exp="yes"}}
{{> nav back="true"}}

	<div class="container">
		<h2 class="text-center">Create an Account</h2>

		<form id="loginForm" method="post" onsubmit="validateLogin();" action="/" data-parsley-validate="">
		<div class="form-group">
			<label for="email">Email address</label>
			<input type="email" class="form-control" placeholder="Email" data-parsley-trigger="change" name="email" required="">
		</div>
		<div class="form-group">
			<label for="password">Password</label>
			<input type="password" class="form-control" placeholder="Password" name="password" required="">
		</div>
		<div class="checkbox">
			<label>
				<input type="checkbox" name="remember"> Agree to the terms.
			</label>
		</div>
		<button type="submit" class="btn btn-default btn-lg center-block">Create Account</button>
	</form>	

		

	</div>
{{> footer}}
{{> nav}}
<div class="text-center">
	<h1 style="padding-bottom : 20px; padding-top : 10px;"> Customize Your Way </h1>
	<form class="form-inline" method="get" action="/choose">
		<div class="form-group">
			<label>From</label>
			<div class="col-md-6 col-md-offset-3">
				<input type="text" class="form-control" name="start" value="{{start}}">
			</div>
		</div>
		<div class="form-group">
			<label>To</label>
			<div class="col-md-6 col-md-offset-3">
				<input type="text" class="form-control" name="dest" value="{{dest}}">
			</div>
		</div>
		<button type="submit" class="btn btn-default btn-lg">Update</button>
	</form>
</div>
<hr>
<div class="container">
	<div class="text-center">
		<h2 style="padding-bottom : 20px;">
			Choose Parameters For Your Route :
		</h2>
		<form class="form" id="params" method="post" action="/showroute">
		</div>

		<h3 class="bg-primary" id="aestheticRadio">Aesthetic Options</h3>
		<div class="form-group options" id="aestheticOptions">
			<label>Places of Interests</label>
			<select class="form-control" name="places">
				<option value="art">Public Art</option>
				<option value="foodnshop">Shops and Restaurants</option>
				<option value="scenery">Scenery</option>
			</select>
		</div>

		<h3 class="bg-primary" id="congestionRadio">Congestion Options</h3>
		<div class="form-group options" id="congestionOptions">
			<label>Quietness and Crowd Level</label>
			<div class="radio">
				<label>
					<input type="radio" name="congestion" value="quiet">Quiet
				</label>
			</div>
			<div class="radio">
				<label>
					<input type="radio" name="congestion" value="lively">Lively
				</label>
			</div>
			<div class="radio">
				<label>
					<input type="radio" name="congestion" value="both">I don't care!
				</label>
			</div>
		</div>

		<h3 class="bg-primary" id="terrainRadio">Terrain Options</h3>
		<div class="form-group options" id="terrainOptions">
			<label>Do you like an easy walk, or do you want some challenges?</label>
			<div class="checkbox">
				<label>
					<input type="checkbox" name="terrain" value="hill">No Hills
				</label>
			</div>
			<div class="checkbox">
				<label>
					<input type="checkbox" name="terrain" value="mud">No Muds
				</label>
			</div>
		</div>

		<h3 class="bg-primary" id="safetyRadio">Safety Options</h3>
		<div class="form-group options" id="safetyOptions">
			<label>Do you feel a sense of insecurity?</label>
			<div class="checkbox">
				<label>
					<input type="checkbox" name="security" value="lights">Street Lights
				</label>
			</div>
			<div class="checkbox">
				<label>
					<input type="checkbox" name="terrain" value="sidewalk">Has Sidewalk
				</label>
			</div>
		</div>

		<div class="choose-footer-container">
			<div class="choose-footer-item">
				<button class="btn btn-primary" type="button" id="resetbutton">Reset</button>
				<button class="btn btn-primary" type="submit" id="showbutton">Submit</button>
			</div>
		</div>
	</form>
</div>
<script src="/js/choose.js"></script>
</body>
</html>


